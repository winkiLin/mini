/* pages/login/login.wxss */
page{padding-top:80px; }
.wrap {
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
} 
.page_logo{
  width:45%;
  color: #333;
  font-size:40rpx;
  font-weight: bold;
  margin-top: 100rpx; 
  text-align:center;
}
.page_logo image{
  width:100%;
  margin-left:-5%;
}
.page_title{
  width: 80%;
  color: #333;
  font-size:40rpx;
  font-weight: bold;
  margin-top: 10rpx; 
  margin-bottom: 50rpx;
}
.page_dec{
  width: 80%;
  color: #A1A0A9;
  font-size:30rpx; 
  margin-top: 10rpx;
  margin-bottom: 50rpx;
}
.item {
  position: relative;
  margin:30rpx auto;
  width: 80%;
} 
.input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #181721;
  background-color: transparent;
  border-bottom: 1px solid #f3f3f3;
}
.input:focus {
  border-bottom: 1px solid #A1A0A9;
} 
.GetCodeBtn{
  z-index: 2;
  position: absolute;
  right: 5px;
  bottom: 0;
  border: 0;
  background-color: transparent;
  height: 80rpx;
  /* line-height: 80rpx; */
  font-size: 30rpx;
}
.GetCodeBtn::after,.GetCodeBtn::before{border: 0;}
.GetCodeBtn[disabled]{
  background-color: transparent!important;
}
.login-btn {
  width: 80%;
  height: 80rpx;
  /* line-height: 80rpx; */

  margin-top: 50rpx;

  font-size: 35rpx;
  text-align: center;

  border-radius: 20rpx;
  background-color: #0E6FE7;
  color: #fff;
}
.login-btn:active,.login-btn[disabled] {
  background-color: #0E6FE7!important;
  color:rgba(255,255,255,0.7) !important;
}
/* 验证码 */
.member_main {
  width: 96%;
  margin: 30rpx 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #dcdcde;
}

.member_main input {
  background: none;
  border: none;
  padding: 15px 0;
  outline: none;
  width: 95%;
  font-size: 40rpx;
}

.phcolor {
  color: #d1d1d1;
}

.input_center {
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}

.input_center view {
  display: inline-block;
}

.input_center .center_left {
  width: 45%;
}

.input_center .capture {
  width: 35%;
}

.input_center .changeImg {
  width: 20%;
  padding: 20rpx;
  text-decoration: underline;
  color: #4b5987;
}

.btn {
  width: 90%;
  margin: 0 auto;
  padding: 0;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.btn button {
  width: 100%;
  background: #485a8b;
  border: none;
  text-align: center;
  color: #fff;
  outline: none;
  font-size: 40rpx;
}

canvas {
  width: 300rpx;
  height: 80rpx;
}
